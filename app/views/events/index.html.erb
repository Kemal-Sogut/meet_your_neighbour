<% content_for :title, "Iftar Events" %>

<div class="w-full">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-800">Iftar Events</h1>
      <p class="text-gray-600 mt-1">Discover and join community Iftars near you</p>
    </div>
    <% if logged_in? && (current_user.host? || current_user.admin?) %>
      <%= link_to new_event_path, class: "inline-flex items-center px-5 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-xl font-semibold hover:from-amber-600 hover:to-orange-600 transition-all shadow-lg hover:shadow-xl" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Host New Iftar
      <% end %>
    <% end %>
  </div>

  <!-- Events Grid -->
  <div id="events" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if @events.any? %>
      <% @events.each do |event| %>
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl overflow-hidden border border-amber-100 hover:shadow-xl transition-all hover:-translate-y-1 group">
          <!-- Image/Header -->
          <div class="h-40 relative group-hover:opacity-95 transition-opacity">
            <%= image_tag event.banner_path, class: "w-full h-full object-cover" %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            <% if event.capacity %>
              <div class="absolute top-3 right-3 px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full text-sm font-medium text-amber-700 shadow-sm">
                <%= event.rsvps.confirmed.count %>/<%= event.capacity %> attending
              </div>
            <% end %>
          </div>

          <!-- Content -->
          <div class="p-5">
            <div class="flex items-center text-sm text-amber-600 mb-2">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <%= event.date.strftime("%B %d, %Y") %>
              <span class="mx-2">â€¢</span>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= event.date.strftime("%I:%M %p") %>
            </div>

            <h3 class="text-xl font-bold text-gray-800 group-hover:text-amber-600 transition-colors mb-2">
              <%= link_to event.title, event, class: "hover:underline" %>
            </h3>

            <p class="text-gray-600 text-sm mb-3 line-clamp-2">
              <%= truncate(event.description, length: 100) %>
            </p>

            <div class="flex items-center text-gray-500 text-sm mb-4">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <%= event.location %>
            </div>

            <% if event.user %>
              <div class="flex items-center text-sm text-gray-500 mb-4">
                <div class="w-6 h-6 bg-gradient-to-br from-amber-400 to-orange-500 rounded-full flex items-center justify-center text-white text-xs font-semibold mr-2">
                  <%= event.user.username.first.upcase %>
                </div>
                Hosted by <%= event.user.username %>
              </div>
            <% end %>

            <!-- Actions -->
            <div class="flex items-center gap-2">
              <%= link_to event, class: "flex-1 text-center py-2 px-4 bg-amber-100 text-amber-700 rounded-lg font-medium hover:bg-amber-200 transition-colors" do %>
                View Details
              <% end %>
              <% if logged_in? && (current_user.admin? || current_user == event.user) %>
                <%= link_to edit_event_path(event), class: "p-2 text-gray-400 hover:text-amber-600 transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-span-full text-center py-16">
        <div class="w-20 h-20 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-800 mb-2">No events yet</h3>
        <p class="text-gray-600 mb-4">Be the first to host an Iftar in your community!</p>
        <% if logged_in? && (current_user.host? || current_user.admin?) %>
          <%= link_to "Host an Iftar", new_event_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-xl font-semibold hover:from-amber-600 hover:to-orange-600 transition-all shadow-lg" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
