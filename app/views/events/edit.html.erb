<% content_for :title, "Edit: #{@event.title}" %>

<div class="max-w-2xl mx-auto">
  <!-- Back Link -->
  <%= link_to @event, class: "inline-flex items-center text-gray-600 hover:text-amber-600 mb-6 transition-colors" do %>
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Back to event
  <% end %>

  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8 border border-amber-100">
    <div class="mb-8">
      <div class="w-14 h-14 bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-800">Edit Event</h1>
      <p class="text-gray-600 mt-1">Update the details of your Iftar event</p>
    </div>

    <%= render "form", event: @event %>
  </div>
</div>
