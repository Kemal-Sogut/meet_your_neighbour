<% content_for :title, @title %>

<div class="space-y-8">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-800"><%= @title %></h1>
      <p class="text-gray-600 mt-1">
        <% if current_user.admin? %>
          Manage all events and RSVPs
        <% elsif current_user.host? %>
          Manage your hosted events
        <% else %>
          Track your Iftar RSVPs
        <% end %>
      </p>
    </div>
    <div class="flex items-center space-x-2">
      <span class="px-3 py-1 rounded-full text-sm font-medium <%= current_user.admin? ? 'bg-purple-100 text-purple-700' : current_user.host? ? 'bg-amber-100 text-amber-700' : 'bg-gray-100 text-gray-600' %>">
        <%= current_user.role.capitalize %>
      </span>
    </div>
  </div>

  <% if current_user.host? || current_user.admin? %>
    <!-- Managed Events Section -->
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-amber-100 p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-gray-800">
          <% if current_user.admin? %>
            All Events
          <% else %>
            Your Hosted Events
          <% end %>
        </h2>
        <% if current_user.host? || current_user.admin? %>
          <%= link_to new_event_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-lg font-medium hover:from-amber-600 hover:to-orange-600 transition-all shadow-md" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Event
          <% end %>
        <% end %>
      </div>

      <% if @managed_events.any? %>
        <div class="space-y-4">
          <% @managed_events.each do |event| %>
            <div class="border border-gray-100 rounded-xl p-4 hover:shadow-md transition-shadow">
              <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <!-- Event Info -->
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <%= link_to event.title, event, class: "text-lg font-semibold text-gray-800 hover:text-amber-600" %>
                    <% if event.date < Time.current %>
                      <span class="px-2 py-0.5 bg-gray-100 text-gray-500 rounded-full text-xs">Past</span>
                    <% elsif !event.rsvp_open? %>
                      <span class="px-2 py-0.5 bg-red-100 text-red-600 rounded-full text-xs">RSVP Closed</span>
                    <% else %>
                      <span class="px-2 py-0.5 bg-green-100 text-green-600 rounded-full text-xs">RSVP Open</span>
                    <% end %>
                  </div>
                  <div class="flex items-center gap-4 text-sm text-gray-500">
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <%= event.date.strftime("%b %d, %Y %I:%M %p") %>
                    </span>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <%= event.rsvps.confirmed.count %><%= event.capacity ? "/#{event.capacity}" : "" %> attending
                    </span>
                    <% if current_user.admin? && event.user %>
                      <span class="text-gray-400">by <%= event.user.username %></span>
                    <% end %>
                  </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center gap-2">
                  <%= link_to edit_event_path(event), class: "px-3 py-2 text-gray-600 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-colors" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                  <%= link_to event, class: "px-3 py-2 text-gray-600 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-colors" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  <% end %>
                </div>
              </div>

              <!-- Attendee Management (expandable) -->
              <% if event.rsvps.confirmed.any? %>
                <details class="mt-4">
                  <summary class="cursor-pointer text-sm font-medium text-amber-600 hover:text-amber-700">
                    Manage Attendees (<%= event.rsvps.confirmed.count %>)
                  </summary>
                  <div class="mt-3 pl-4 border-l-2 border-amber-100">
                    <div class="space-y-2">
                      <% event.rsvps.confirmed.includes(:user).each do |rsvp| %>
                        <div class="flex items-center justify-between py-2">
                          <div class="flex items-center">
                            <div class="w-8 h-8 bg-gradient-to-br from-amber-400 to-orange-500 rounded-full flex items-center justify-center text-white text-sm font-semibold mr-3">
                              <%= rsvp.user.username.first.upcase %>
                            </div>
                            <div>
                              <span class="font-medium text-gray-800"><%= rsvp.user.username %></span>
                              <span class="text-gray-400 text-sm ml-2"><%= rsvp.user.email %></span>
                            </div>
                          </div>
                          <%= button_to event_cancel_rsvp_path(event, rsvp), 
                              method: :delete,
                              data: { turbo_confirm: "Remove #{rsvp.user.username} from this event?" },
                              class: "text-red-500 hover:text-red-700 text-sm font-medium" do %>
                            Cancel RSVP
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </details>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          <p>No events yet.</p>
          <%= link_to "Create your first event", new_event_path, class: "text-amber-600 hover:text-amber-700 font-medium" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- My RSVPs Section -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-amber-100 p-6">
    <h2 class="text-xl font-bold text-gray-800 mb-6">
      <% if current_user.guest? %>
        Your Upcoming Iftars
      <% else %>
        RSVPs You've Made
      <% end %>
    </h2>

    <% if @upcoming_rsvps.any? %>
      <div class="space-y-3">
        <% @upcoming_rsvps.each do |rsvp| %>
          <div class="flex items-center justify-between p-4 border border-gray-100 rounded-xl hover:shadow-sm transition-shadow">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-gradient-to-br from-amber-400 to-orange-500 rounded-xl flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <%= link_to rsvp.event.title, rsvp.event, class: "font-semibold text-gray-800 hover:text-amber-600" %>
                <div class="text-sm text-gray-500">
                  <%= rsvp.event.date.strftime("%A, %B %d at %I:%M %p") %>
                  <span class="mx-1">â€¢</span>
                  <%= rsvp.event.location %>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                <%= rsvp.status.capitalize %>
              </span>
              <%= button_to event_rsvp_path(rsvp.event), method: :delete, class: "text-gray-400 hover:text-red-500 transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        <p>You haven't RSVP'd to any upcoming events.</p>
        <%= link_to "Browse events", events_path, class: "text-amber-600 hover:text-amber-700 font-medium" %>
      </div>
    <% end %>

    <% if @past_rsvps.any? %>
      <div class="mt-6 pt-6 border-t border-gray-100">
        <h3 class="text-sm font-medium text-gray-500 mb-3">Past Events</h3>
        <div class="space-y-2">
          <% @past_rsvps.each do |rsvp| %>
            <div class="flex items-center justify-between py-2 text-gray-400">
              <span><%= rsvp.event.title %></span>
              <span class="text-sm"><%= rsvp.event.date.strftime("%b %d, %Y") %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
