<!-- Hero Section -->
<div class="text-center py-16 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="inline-flex items-center px-4 py-2 bg-amber-100 text-amber-800 rounded-full text-sm font-medium mb-6">
      ðŸŒ™ Ramadhan Mubarak
    </div>
    <h1 class="text-5xl md:text-6xl font-bold text-gray-800 mb-6 leading-tight">
      Share the <span class="bg-gradient-to-r from-amber-500 to-orange-500 bg-clip-text text-transparent">Blessing</span> of Iftar
    </h1>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
