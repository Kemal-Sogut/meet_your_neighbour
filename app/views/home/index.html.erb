  <div class="grid md:grid-cols-3 gap-8">
    <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-8 border border-amber-100 text-center hover:shadow-lg transition-shadow">
      <div class="w-14 h-14 bg-gradient-to-br from-amber-400 to-orange-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-md">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800 mb-2">Connect</h3>
      <p class="text-gray-600">Meet neighbours you never knew and build lasting friendships over shared meals.</p>
    </div>

    <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-8 border border-amber-100 text-center hover:shadow-lg transition-shadow">
      <div class="w-14 h-14 bg-gradient-to-br from-amber-400 to-orange-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-md">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800 mb-2">Host</h3>
      <p class="text-gray-600">Share the blessing by hosting Iftar and welcoming neighbours to your table.</p>
    </div>

    <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-8 border border-amber-100 text-center hover:shadow-lg transition-shadow">
      <div class="w-14 h-14 bg-gradient-to-br from-amber-400 to-orange-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-md">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800 mb-2">Share</h3>
      <p class="text-gray-600">Experience the joy of giving and create beautiful memories this Ramadhan.</p>
    </div>
  </div>
</div>

<!-- Upcoming Events Section -->
<% if @upcoming_events.any? %>
  <div class="py-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold text-gray-800">Upcoming Iftars</h2>
      <%= link_to "View All â†’", events_path, class: "text-amber-600 hover:text-amber-700 font-semibold" %>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @upcoming_events.each do |event| %>
        <%= link_to event, class: "block group" do %>
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl overflow-hidden border border-amber-100 hover:shadow-xl transition-all hover:-translate-y-1">
            <div class="h-32 relative">
              <%= image_tag event.banner_path, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
            <div class="p-5">
              <div class="flex items-center text-sm text-amber-600 mb-2">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <%= event.date.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
              <h3 class="text-lg font-bold text-gray-800 group-hover:text-amber-600 transition-colors mb-2">
                <%= event.title %>
              </h3>
              <div class="flex items-center text-gray-500 text-sm">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <%= event.location %>
              </div>
              <% if event.capacity %>
                <div class="mt-3 flex items-center text-sm">
                  <span class="px-2 py-1 bg-amber-100 text-amber-700 rounded-full text-xs font-medium">
                    <%= event.rsvps.confirmed.count %>/<%= event.capacity %> spots filled
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
